.summary 
  .summary_survey
    %h1= "Summary for #{@reportbysurvey.survey.name}"

    = render 'shared/reporttable', :reports => [@reportbysurvey]

.summary
  .summary_images
    %h2 Summary by Master-Image

    = render 'shared/reporttable', :reports => @reportbysurveybymasterimages
    

.individual
  %h2 Individual Reports

  = render 'shared/reporttable', :reports => @questionnaires

.comments
  %h3 Comments

  %ul
    - @questionnaires.each do |q|
      - if q.comment and q.comment.length > 0
        %li
          %b= q.user.name 
          for
          %b= q.virtualdesktop.name+":"
          %cite= q.comment




